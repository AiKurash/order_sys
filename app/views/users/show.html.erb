<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.email %>
        <% @user.roles.each do |role| %>
          <div class="badge badge-info">
            <%= role.name %>
          </div>
        <% end %>
      </h1>
    </section>
  </aside>
</div>
