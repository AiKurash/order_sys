<p id="notice"><%= notice %></p>
<div class="row">
      <div class="col-md-4">
        <p>
          <strong>Name:</strong>
          <%= @order.name %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @order.description %>
        </p>

        <p>
          <strong>Order status:</strong>
          <%= @order.order_status %>
        </p>

        <p>
          <strong>User:</strong>
          <%= @order.user_id %>
        </p>
    </div>
    <div class="col-md-4">
      <h1> Certificates </h1>
      <%= @orders %>
    </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div>
      <%= link_to "Add Certificate", new_order_certificate_path(@order, @certificate) %>
      <% @certificates.each do |certificate| %>
        <%= render 'certificates/certificate', certificate: certificate %>
      <% end %>
    </div>
  </div>
</div>

